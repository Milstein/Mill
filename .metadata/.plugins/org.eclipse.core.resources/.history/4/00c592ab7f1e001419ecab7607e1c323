package nineMensMorris;

public class Slot {
	private int val;
	public Slot(int val) throws Exception {
		setVal(val);
	}
	
	public Slot() {
		setVal(0);
	}
	
	public int getVal() {
		return val;
	}
	
	public void setVal(int val) throws Exception {
		if (!(0<=val && val<=2))
			throw new Exception("Slot value out of range");
		this.val = val;
	}
}
