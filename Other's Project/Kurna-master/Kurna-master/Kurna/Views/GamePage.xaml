<UserControl x:Class="Kurna.Views.GamePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:views="clr-namespace:Kurna.Views"
             mc:Ignorable="d" 
             d:DesignHeight="640" d:DesignWidth="800">
    <Grid Background="DimGray">
        <Grid.RowDefinitions>
            <RowDefinition Height="96" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <views:PlayerHeader Grid.Row="0" HorizontalAlignment="Stretch"/>
        <views:Board Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center">
        </views:Board>
    </Grid>
</UserControl>
